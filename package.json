{
  "name": "merchant-closepay-v2",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android:staging": "react-native run-android --mode=stagingDebug",
    "android:prod": "react-native run-android --mode=productionDebug",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:html": "jest",
    "test:html:open": "jest && start test-results/test-report.html",
    "test:e2e": "detox test",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "build:e2e:android": "detox build --configuration android.emu.debug",
    "build:e2e:ios": "detox build --configuration ios.sim.debug",
    "build:android:debug": "cd android && gradlew.bat assembleDebug && cd ..",
    "build:android:release": "cd android && gradlew.bat assembleRelease && cd ..",
    "build:apk": "cd android && gradlew assembleRelease",
    "build:apk:staging": "cd android && gradlew assembleStagingRelease",
    "build:apk:prod": "cd android && gradlew assembleProductionRelease",
    "build:apk:debug": "cd android && gradlew assembleDebug",
    "split:company": "node scripts/split-company-repo.js",
    "split:all": "node scripts/split-company-repo.js --all"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-clipboard/clipboard": "^1.16.3",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@react-native/new-app-screen": "0.82.1",
    "@react-navigation/bottom-tabs": "^7.8.8",
    "@react-navigation/drawer": "^7.7.5",
    "@react-navigation/native": "^7.1.20",
    "@react-navigation/native-stack": "^7.6.3",
    "@tinymomentum/liquid-glass-react": "^1.0.6",
    "axios": "^1.13.2",
    "base-64": "^1.0.0",
    "freerasp-react-native": "^4.2.4",
    "iconsax-react-nativejs": "^0.0.8",
    "nativewind": "^4.2.1",
    "react": "19.1.1",
    "react-native": "0.82.1",
    "react-native-ble-plx": "^3.5.0",
    "react-native-chucker": "^1.0.1",
    "react-native-config": "^1.6.0",
    "react-native-encrypted-storage": "^4.0.3",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-nfc-manager": "^3.17.2",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.18.0",
    "react-native-skeleton-placeholder": "^5.2.4",
    "react-native-svg": "^15.15.0",
    "react-native-toast-message": "^2.3.3",
    "react-native-worklets": "^0.6.1",
    "tailwindcss": "^3.4.18",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.82.1",
    "@react-native/eslint-config": "0.82.1",
    "@react-native/metro-config": "0.82.1",
    "@react-native/typescript-config": "0.82.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/base-64": "^1.0.2",
    "@types/jest": "^29.5.14",
    "@types/react": "19.1.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "detox": "^20.46.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "jest-circus": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "obfuscator-io-metro-plugin": "^2.1.3",
    "prettier": "2.8.8",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
